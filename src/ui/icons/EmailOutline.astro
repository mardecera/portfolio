---
import type { IconSize } from "@/components/types/constants/ui"
import { ICON_SIZES } from "@/constants/ui"
import IconContainer from "../../layouts/IconContainer.astro"

interface Props {
	size?: IconSize
}

const { size = "default" } = Astro.props
const svgSize = ICON_SIZES[size]
---

<IconContainer>
	<svg
		width={svgSize}
		height={svgSize}
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round"
		class="lucide lucide-mail h-5 w-5 text-primary"
		><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
			d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
	>
</IconContainer>

---
import IconContainer from "../../layouts/IconContainer.astro"
import { ICON_SIZES } from "@/constants/ui"
import type { IconSize } from "@/components/types/constants/ui"

interface Props {
	size?: IconSize
}

const { size = "default" } = Astro.props
const svgSize = ICON_SIZES[size]
---

<IconContainer>
	<svg
		width={svgSize}
		height={svgSize}
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round"
		class="lucide lucide-linkedin h-5 w-5"
		><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
		></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"
		></circle></svg
	>
</IconContainer>

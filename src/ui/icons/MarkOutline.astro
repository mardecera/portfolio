---
import { ICON_SIZES } from "@/constants/ui"
import type { IconSize } from "@/types/constants/contants"
import IconContainer from "./IconContainer.astro"

interface Props {
	size?: IconSize
}

const { size = "default" } = Astro.props
const svgSize = ICON_SIZES[size]
---

<IconContainer>
	<svg
		width={svgSize}
		height={svgSize}
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round"
		class="h-5 w-5 text-primary"
		><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle
			cx="12"
			cy="10"
			r="3"></circle></svg
	>
</IconContainer>

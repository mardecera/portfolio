---
import "../styles/global.css"
import Footer from "@/components/astro/Footer.astro"
import Header from "@/components/astro/Header.astro"
import LinkPreviewIMG from "@/assets/link-preview.png"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<title>Jonathan Cervantes Alarcon | Frontend Developer</title>
		<meta name="title" content="Jonathan Cervantes Alarcon | Frontend Developer" />
		<meta
			name="description"
			content="Portafolio web de un desarrollador frontend, mostrando proyectos y habilidades en tecnologías modernas. ¿Tienes un proyecto que necesita un toque creativo? ¡Me encantaría escucharlo!"
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://mardecera.com/" />
		<meta property="og:title" content="Jonathan Cervantes Alarcon | Frontend Developer" />
		<meta
			property="og:description"
			content="Portafolio web de un desarrollador frontend, mostrando proyectos y habilidades en tecnologías modernas. ¿Tienes un proyecto que necesita un toque creativo? ¡Me encantaría escucharlo!"
		/>
		<meta property="og:image" content={LinkPreviewIMG.src} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://mardecera.com/" />
		<meta property="twitter:title" content="Jonathan Cervantes Alarcon | Frontend Developer" />
		<meta
			property="twitter:description"
			content="Portafolio web de un desarrollador frontend, mostrando proyectos y habilidades en tecnologías modernas. ¿Tienes un proyecto que necesita un toque creativo? ¡Me encantaría escucharlo!"
		/>
		<meta property="twitter:image" content={LinkPreviewIMG.src} />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	.geist {
		font-family: "Geist", sans-serif;
		font-optical-sizing: auto;
		font-weight: 100 900;
		font-style: normal;
		line-height: 1.5;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		font-family:
			"Geist", Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial, sans-serif;
		min-height: 100dvh;
		display: flex;
		flex-direction: column;
		/* align-items: stretch; */
	}

	main {
		flex: 1;
	}
</style>

---
import { projects } from "../../constants/projects"
import MaxContainer from "../../layouts/MaxContainer.astro"
import GithubOutline from "../../ui/icons/GithubOutline.astro"
import Button from "../Button.astro"
import Tag from "../Tag.astro"
import TitleOfSection from "../TitleOfSection.astro"
---

<div id="projects">
	<MaxContainer>
		<div class="container">
			<div class="header">
				<TitleOfSection>Projects</TitleOfSection>
				<h2>A selection of my recent work and personal projects</h2>
			</div>
			<div class="content">
				<div class="list">
					{
						projects.map((project) => (
							<div class="project">
								<div class="thumnail">
									<picture>
										<img src={project.image} alt={project.title} />
									</picture>
								</div>
								<div class="body">
									<div class="info">
										<h3>{project.title}</h3>
										<p class="description">{project.description}</p>
										<span class="tags">
											{project?.technologies?.map((tag) => (
												<Tag>{tag}</Tag>
											))}
										</span>
									</div>
									<div class="links">
										<Button type="primary" href={project?.pageUrl}>
											View Project
										</Button>
										<Button href={project?.codeUrl} icon={GithubOutline} />
									</div>
								</div>
							</div>
						))
					}
				</div>
				<div class="all">
					<Button href="/projects">View All Projects</Button>
				</div>
			</div>
		</div>
	</MaxContainer>
</div>

<style>
	#projects {
		width: 100%;
		padding-block: 4rem;
		background-color: white;

		@media only screen and (min-width: 640px) {
			padding-block: 8rem;
		}

		& .container {
			& .header {
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align: center;
			}

			& .content {
				margin-top: 2rem;

				.list {
					display: flex;
					gap: 1rem;
					height: fit-content;
					justify-content: center;
					flex-wrap: wrap;

					& .project {
						background-color: white;
						border: 1px solid #e4e4e7;
						border-radius: 0.5rem;
						max-width: 320px;
						display: flex;
						flex-direction: column;

						& .thumnail {
							aspect-ratio: 16 / 9;
							overflow: hidden;

							& picture {
								width: 100%;
								height: 100%;

								& img {
									width: 100%;
									height: 100%;
									object-fit: cover;
								}
							}
						}

						& .body {
							padding: 1rem;
							display: flex;
							flex-direction: column;
							gap: 1rem;
							flex: 1;
							justify-content: space-between;

							& .info {
								& h3 {
									font-size: 1rem;
								}

								& .description {
									font-size: 0.875rem;
								}

								& .tags {
									display: flex;
									gap: 0.5rem;
									margin-top: 0.5rem;
									flex-wrap: wrap;
								}
							}

							& .links {
								display: flex;
								justify-content: space-between;
							}
						}
					}
				}

				.all {
					margin-top: 1rem;

					& a {
						margin: 0 auto;
					}
				}
			}
		}
	}
</style>

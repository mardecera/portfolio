---
import Button from "@/components/Button.astro"
import TitleOfSection from "@/components/TitleOfSection.astro"
import MaxContainer from "@/layouts/MaxContainer.astro"
import DownloadOutline from "@/ui/icons/DownloadOutline.astro"
---

<div id="aboutme">
	<MaxContainer>
		<div class="aboutme-container">
			<div class="photo">
				<picture class="profile">
					<img
						src="/default-square.svg"
						alt="Jonathan Cervantes Alarcón"
						width="500px"
						height="500px"
						alt="Descripción"
					/>
				</picture>
			</div>
			<div class="info">
				<TitleOfSection>Sobre mí</TitleOfSection>
				<h2>Passionate Web Designer & Developer</h2>
				<div class="description">
					<p>
						Con 1 año de experiencia en crear sitios web y aplicaciones web con una
						excelente experiencia digital.
					</p>
					<p>
						He desarrollado applicaciones dashboard con manejo de servicios atravez de
						endpoints
					</p>
					<p>
						Ya sea que necesites un rediseño completo de tu sitio web, una nueva
						identidad de marca o ayuda para optimizar tu sitio web actual, estoy aquí
						para entregar tu visión.
					</p>
				</div>
				<div class="cta">
					<Button href="/favicon.svg" download>
						Descargar CV <DownloadOutline />
					</Button>
				</div>
			</div>
		</div>
	</MaxContainer>
</div>

<style>
	#aboutme {
		width: 100%;
		padding-block: 4rem;
		background-color: white;

		@media only screen and (min-width: 640px) {
			padding-block: 8rem;
		}
	}

	.aboutme-container {
		display: flex;
		gap: 1rem;
		flex-direction: column;

		@media only screen and (min-width: 640px) {
			flex-direction: row;
			gap: 2rem;
		}

		.photo {
			max-width: 100%;
			aspect-ratio: 16 / 9;

			@media only screen and (min-width: 640px) {
				max-width: 50%;
			}

			.profile {
				width: 100%;
				height: 100%;

				img {
					width: 100%;
					height: 100%;
					aspect-ratio: 1 / 1;
					object-fit: cover;
				}
			}
		}

		.info {
			display: flex;
			flex-direction: column;
			gap: 1rem;

			.description {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
		}
	}
</style>

---
import type { AstroComponentFactory } from "astro/runtime/server/index.js"

interface Props {
	type?: "primary" | "default" | "dashed" | "text" | "link"
	variant?: "solid" | "outline" | "dashed" | "filled" | "text" | "link"
	href?: string
	icon?: AstroComponentFactory
	download?: boolean
	className?: string
	disabled?: boolean
}

const {
	type = "default",
	href,
	icon: Icon,
	download,
	variant = "solid",
	className = "",
	disabled,
} = Astro.props

const hasSlot = Astro.slots.has("default")
const isExternal = href?.startsWith("http")
const Component = href ? "a" : "button"
const attributes = isExternal
	? { target: "_blank", rel: "noopener noreferrer", href: href }
	: { href: href }
---

<Component
	class={`button ${className} ${type} ${variant} ${hasSlot ? "" : "only-icon"}`}
	disabled={disabled}
	download={download}
	{...attributes}
>
	{hasSlot && <slot />}
	{Icon && <Icon />}
</Component>

<style>
	a,
	button {
		text-decoration: none;
		height: 44px;
		padding-inline: 1.5rem;
		border-radius: 3rem;
		border: none;
		font-size: 14px;
		font-weight: 600;
		cursor: pointer;
		display: flex;
		gap: 1rem;
		align-items: center;
		color: #18181b;
		width: fit-content;

		&:focus,
		&:focus-visible {
			outline: 5px solid rgba(143, 143, 150, 0.3);
			outline-offset: 0;
		}

		&:disabled {
			cursor: not-allowed;
			opacity: 0.5;
		}
	}

	.default {
		background-color: white;
		border: 1px solid #e4e4e7;

		&:hover {
			background-color: #fafafa;
		}
	}

	.primary {
		background-color: var(--primary-color);
		color: white;

		&:hover {
			background-color: #18181bfe;
		}
	}

	.text {
		background-color: transparent;

		&:hover {
			background-color: #f4f4f5;
		}
	}

	.only-icon {
		padding-inline: 0px !important;
		width: 44px;
		height: 44px;
		aspect-ratio: 1 / 1;
		justify-content: center;
	}
</style>

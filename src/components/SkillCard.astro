---
import Tag from "./Tag.astro"

interface Props {
	title: string
	description: string
	tecnologies: string[]
}

const { title, description, tecnologies } = Astro.props
---

<div class="skill-card">
	<span class="icon">
		<slot />
	</span>
	<h3>{title}</h3>
	<p class="description">{description}</p>
	<ul class="tecnologies">
		{tecnologies.map((tecnology) => <Tag>{tecnology}</Tag>)}
	</ul>
</div>

<style>
	.skill-card {
		border: 1px solid #e4e4e7;
		border-radius: 0.5rem;
		padding: 2rem;
		display: flex;
		gap: 1rem;
		flex-direction: column;
		background-color: white;

		span.icon {
			/* padding: 1rem; */
			background-color: #f5f5f5;
			width: 3rem;
			height: 3rem;
			aspect-ratio: 1 / 1;
			border-radius: 3rem;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.description {
			color: #71717a;
		}

		.tecnologies {
			display: flex;
			gap: 0.5rem;
			flex-wrap: wrap;
		}
	}
</style>
